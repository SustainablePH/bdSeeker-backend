{
    "info": {
        "_postman_id": "bdseeker-admin-collection",
        "name": "bdSeeker Admin API",
        "description": "Admin-only endpoints for bdSeeker platform management. Requires admin authentication.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Admin Authentication",
            "item": [
                {
                    "name": "Login as Admin",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set(\"admin_token\", jsonData.data.token);",
                                    "    pm.environment.set(\"admin_user_id\", jsonData.data.user.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@bdseeker.com\",\n  \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login with default admin credentials"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Statistics",
            "item": [
                {
                    "name": "Get Platform Stats",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{admin_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/admin/stats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin",
                                "stats"
                            ]
                        },
                        "description": "Get platform statistics including total users, developers, companies, jobs, reports, and pending reviews"
                    },
                    "response": []
                }
            ]
        },
